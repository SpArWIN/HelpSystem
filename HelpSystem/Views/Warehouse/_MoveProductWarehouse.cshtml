@model IEnumerable<HelpSystem.Domain.ViewModel.Transfer.TransferProductViewModel>

@{
    ViewBag.Title = "Формирование заявки";
   
}

    <style>
    #massMoveFooter {
        display: block;
        height: auto;
        opacity: 0;
        transition: opacity 0.3s ease; 
        overflow: hidden; 
    }

        #massMoveFooter.show {
            opacity: 1;
        }

  


    </style>




    @if (Model.Any())
    {
        <div class="accordion" id="accordionExample">
        @foreach (var productGroup in Model.GroupBy(p => p.Name))
        {
            var position = 0; // Переменная для хранения номера позиции
            <div class="accordion-item">
                <h2 class="accordion-header" id="@($"heading{productGroup.Key.Replace(" ", "-")}")">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="@($"#collapse{productGroup.Key.Replace(" ", "-")}")" aria-expanded="true" aria-controls="@($"collapse{productGroup.Key.Replace(" ", "-")}")">
                        @productGroup.Key
                    </button>
                </h2>
                <div id="@($"collapse{productGroup.Key.Replace(" ", "-")}")" class="accordion-collapse collapse" aria-labelledby="@($"heading{productGroup.Key.Replace(" ", "-")}")" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        @foreach (var product in productGroup)
                        {
                            position++; // Увеличиваем номер позиции для каждого элемента
                            <div style="border: 2px solid gray; padding: 10px; margin-top:25px; margin-bottom: 13px; box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.4);">
                                <p>Позиция: @position</p>
                                <p id="ProductID_@position" style="display:none">Id: @product.Id</p>
                                <p id="nameProduct_@position">Наименование: @product.Name</p>
                                <p id="Code_@position">Инвентарный код: @product.Code</p>
                                <div style="margin:6px; margin-bottom:6px;">
                                    <label id="WareLabel">Выберите склад</label>
                                    <select class="form-select" id="SelectWarehouse_">
                                        @if (product.Warehouses != null && product.Warehouses.Any())
                                        {
                                            foreach (var warehouse in product.Warehouses)
                                            {
                                                if (!warehouse.IsFreeZing)
                                                {
                                                    <option value="@warehouse.Id" data-isService="@warehouse.IsService">@warehouse.Name</option>
                                                    
                                                }
                                                else
                                                {
                                                    <option disabled>Склад : ' @warehouse.Name ' недоступен.</option>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <option disabled>Нет  складов</option>
                                        }
                                    </select>
                                </div>
                                <a id="@($"BtnMoves_{product.Name}_{position}")" class="btn btn-danger btn-move-product" data-product-id="@product.Id">Переместить</a>
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Тут комментарий" id="@($"floatingTextarea_{product.Name}_{position}")" style="max-height:159px ;  min-height:10px; margin-top:5px" ></textarea>
                                    <label for="floatingTextarea">Введите комментарий (необязательное поле)</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="headingSettings">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSettings" aria-expanded="true" aria-controls="collapseSettings">
                    Настройки перемещения
                </button>
            </h2>
            <div id="collapseSettings" class="accordion-collapse collapse" aria-labelledby="headingSettings" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <div class="form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Режим массового перемещения</label>
                    </div>
                </div>
            </div>
        </div>

        <footer id="massMoveFooter" style="display:none;">
            <div class="d-grid gap-2" style="margin:5px; text-align:center">
                <div style="margin:6px;">
                    <label id="LabelForMassMove" for="SelectMassWarehouse">Выберите склад</label>
                    <select class="form-select" id="SelectMassWarehouse">
                    </select>
                
                </div>
           
                <div class="form-floating">
                    <textarea  class="form-control" placeholder=""id="TextAreas" style="margin-top:5px; min-height:20px; max-height:140px;"></textarea>
                    <label for="massMoveFooter" >Введите комментарий ( необязательное поле)</label>
                </div>
                <a id="BtnMassMove" class="btn btn-danger">Массовое перемещение</a>
            </div>
        </footer>
    }
    else
    {
        <p>На складе нет товаров для перемещения.</p>
    }
    

<script>
    $(document).ready(function () {
        var massMoveProducts = [];
        $(document).on('click', '.btn-move-product', function () {
            massMoveProducts 
            var productId = $(this).data('product-id');
            var warehouseId = $(this).closest('div').find('select').val();
            var Comment = $(this).closest('div').find('textarea').val();
            massMoveProducts = [];
           
            var product = {
                Id:productId,
                SourceWarehouseId: null,
                DestinationWarehouseId: warehouseId,
                CountTransfer:1,
                Comments:Comment
            }
           massMoveProducts.push(product);
            MassMovedProduct(massMoveProducts, 'Перемещение товара', 'Перемещение товара', warehouseId);

        });
       
       
        //Функция добавления товара в список массового перемещения
       

        $('#flexSwitchCheckDefault').change(function () {
            if ($(this).prop('checked')) {
                // Режим массового перемещения включен
                $('.accordion-collapse').addClass('show');
                $('#massMoveFooter').addClass('show');
                $('.accordion-body .form-floating').fadeOut(500);

                $('.btn-move-product').each(function () {
                    var productId = $(this).data('product-id');
                    var checkboxHtml = '<div class="form-check">' +
                        '<input class="form-check-input" type="checkbox" data-product-id="' + productId + '" id="flexSwitchMove_' + productId + '">' +
                        '<label class="form-check-label" for="flexSwitchMove_' + productId + '">Переместить</label>' +
                        '</div>';

                    $(this).fadeOut(600);
                   
                    $(this).replaceWith(checkboxHtml).fadeIn(500);
                });
                //активируем кнопку

                $('#massMoveFooter').fadeIn(700);
                $('.accordion-body select, .accordion-body #WareLabel').fadeOut(700);
                
           

            } else {
                // Режим массового перемещения выключен

                $('.form-check').each(function () {
                    var productId = $(this).find('input[type="checkbox"]').attr('id').split('_')[1];
                    var buttonHtml = '<a class="btn btn-danger btn-move-product" data-product-id="' + productId + '">Переместить</a>';
                   

                    $(this).fadeOut(500, function () {
                        $(this).replaceWith(buttonHtml).fadeIn(500);
                    });
                });
                $('.accordion-body .form-floating').fadeIn(500);
                // Плавно показываем элементы формы
                $('.accordion-body select, .accordion-body #WareLabel').fadeIn(700);

                // Плавно скрываем элементы аккордеона и футера массового перемещения
             
                $('#massMoveFooter').fadeOut(700);
                $('.accordion-collapse').removeClass('show');
                massMoveProducts = [];
            }
        });

        $('#BtnMassMove').on('click', function () {
          
                console.log('Перемещение массовое');
                var warehouseId = $('#SelectMassWarehouse').val();
                console.log('Склад:', warehouseId);
            var Comment = $(this).closest('div').find('textarea').val();
                var selectedProducts = [];
                //Вызываем массовое перемещение и передаем
                $('.form-check input[type="checkbox"]:checked').each(function () {
                    var productId = $(this).data('product-id');
                    var warehouseId = $('#SelectMassWarehouse').val();

                    // Создаем объект товара для массового перемещения
                    var product = {
                        Id: productId,
                        SourceWarehouseId: null,  // Добавим текущий склад при отправке на сервер
                        DestinationWarehouseId: warehouseId,
                        CountTransfer: 1,
                        Comments: Comment
                    };

                    // Добавляем товар в список выбранных товаров
                    selectedProducts.push(product);
                });

                massMoveProducts = selectedProducts;

            if (massMoveProducts.length < 2) {
                Swal.fire({
                    title: 'Упс, что-то пошло не так',
                    text: 'Отмечено меньше двух позиций',
                    icon: 'error',
                    confirmButtonText: 'Окей'
                });

            } else {
                console.log('Перемещение массовое');
                console.log('Выбранные товары для массового перемещения:', massMoveProducts);

              
                MassMovedProduct(massMoveProducts, 'Массовое перемещение товаров', 'Перемещение товаров',warehouseId);
            }
        });

      

        

       
    });
</script>



