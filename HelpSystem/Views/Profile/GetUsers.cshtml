<div class="row">

    @foreach (var Us in Model)
    {
        <div class="col-md-3 mb-3">
            <div class="card user-animation" style="  width: 100%; ">
                <div class="card-header">
                    <h5 class="card-title">@Us.Login</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Фамилия: @Us.LastName</p>
                    <p class="card-text">Имя: @Us.Name</p>
                    <p class="card-text">Отчество: @Us.Surname</p>
                    <p class="card-text">Роль: @Us.Roles</p>
                    <p class="card-text">Возраст: @Us.Age</p>
                </div>
                <div class="card-footer">
                    <div class="d-grid-gap-2" >
                        <a class="btn btn-outline-primary ">Кнопка 1</a>
                        <a class="btn btn-outline-secondary">Кнопка 2</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
          
            $('.user-animation').addClass('show');
        });

      
    </script>
}